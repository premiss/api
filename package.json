{
	"name": "@premiss/api",
	"version": "1.0.0",
	"description": "TypeScript testing library",
	"config": {
		"message": ""
	},
	"scripts": {
		"tcr": "npm run clean && npm run lint && npm run build && npm run coverage && npm run commit --premiss:message=\"TCR $npm_package_config_message\" || (npm run revert && npm run clean)",
		"clean": "git clean -fXd -e \\!.idea -e \\!.idea/**/* -e \\!node_modules -e \\!node_modules/**/*",
		"build": "tsc -p tsconfig.json",
		"lint": "eslint ./src/**/*.ts ./test/**/*.ts ./example/**/*.ts",
		"commit": "git add . && git add -u && git commit -m \"$npm_package_config_message\"",
		"revert": "git reset --hard",
		"nuke": "git clean -fXd -e \\!.idea -e \\!.idea/**/*",
		"coverage": "nyc ts-node -r tsconfig-paths/register test",
		"example": "nyc --nycrc-path=./example/.nycrc.json ts-node -r tsconfig-paths/register example/test",
		"publish-copy": "cp README.md ./dist/src && cp package.json ./dist/src"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gotmonkey/premiss.git"
	},
	"keywords": [
		"TypeScript",
		"Test"
	],
	"author": "Blake Lindsay",
	"license": "CC0-1.0",
	"bugs": {
		"url": "https://github.com/gotmonkey/premiss/issues"
	},
	"homepage": "https://github.com/gotmonkey/premiss#readme",
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "1.0.1",
		"@types/node": "12.12.37",
		"@typescript-eslint/eslint-plugin": "2.30.0",
		"@typescript-eslint/parser": "2.30.0",
		"eslint": "6.8.0",
		"nyc": "15.0.1",
		"ts-node": "8.9.1",
		"tsconfig-paths": "3.9.0",
		"typescript": "3.8.3"
	}
}
