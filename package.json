{
	"name": "premiss",
	"version": "1.0.0",
	"description": "TypeScript testing api",
	"main": "index.js",
	"config": {
		"message": ""
	},
	"scripts": {
		"tcr": "npm run clean && npm run lint && npm run build && npm test && npm run commit --premiss:message=\"TCR $npm_package_config_message\" || (npm run revert && npm run clean)",
		"clean": "git clean -fXd -e \\!.idea -e \\!.idea/**/* -e \\!node_modules -e \\!node_modules/**/*",
		"build": "tsc -p tsconfig.json",
		"test": "node ./dist/test/index.js",
		"lint": "eslint ./src/**/*.ts ./test/**/*.ts",
		"commit": "git add . && git add -u && git commit -m \"$npm_package_config_message\"",
		"revert": "git reset --hard"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gotmonkey/premiss.git"
	},
	"keywords": [
		"TypeScript",
		"Test"
	],
	"author": "Blake Lindsay",
	"license": "CC0-1.0",
	"bugs": {
		"url": "https://github.com/gotmonkey/premiss/issues"
	},
	"homepage": "https://github.com/gotmonkey/premiss#readme",
	"devDependencies": {
		"@types/node": "12.12.34",
		"@typescript-eslint/eslint-plugin": "2.26.0",
		"@typescript-eslint/parser": "2.26.0",
		"eslint": "6.8.0",
		"typescript": "3.8.3"
	}
}
